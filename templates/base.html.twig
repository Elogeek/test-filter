<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {# encore_entry_script_tags('app') #}
        {% endblock %}
    </head>
    <body>
        {# test menu #}
        <div class="sidebar">
            <ul>
                {% block sidebar %}
                    <li><a href={{ path('article') }}>Tous les articles</a></li>
                    <li><a href="#">Articles récents</a></li>
                    <li><a href="#">Archives</a></li>
                {% endblock %}
            </ul>
        </div>
        {% block body %}
            {# test citation and smiley #}
            <div class="citation">
                {{ "Une super citation !" | citation | smile }}
            </div>

            {# test function toInteger #}
            <div class="test">
                {% if toInteger("15hfdiuhiufdu") == 15 %}
                    <p>OK, tout est nickel! </p>
                {% else %}
                    <p>Ouups, il y a une erreur !</p>
                {% endif %}
            </div>
        {% endblock %}
    </body>
</html>
